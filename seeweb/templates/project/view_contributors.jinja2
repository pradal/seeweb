{% extends "project_view.html" %}

{% block project_view_body %}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Registered</h3>
  </div>
  <div class="panel-body projects">
    {% if members|length == 0 %}
        <div class="row">
            This project has no contributors.
        </div>
    {% else %}
    <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>user</th>
              <th>role</th>
            </tr>
          </thead>
          <tbody>
            {% for type, role, user in members %}
            <tr>
              <td>
                {% if type == 'user' %}
                    <a href="{{ request.route_url('user_view_home', uid=user) }}">{{ user }}</a>
                {% elif type == 'team' %}
                    <a href="{{ request.route_url('team_view_members', tid=user) }}">{{ user }}</a>
                {% else %}
                    unknown
                {% endif %}
              </td>
              <td>{% if role == 1 %}read{% elif role==2 %}edit{% else %}denied{% endif %}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
    </div>
    {% endif %}
  </div>
</div>

{% endblock %}
