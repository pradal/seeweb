{% extends "layout_view.jinja2" %}

{% block project_view_body %}

<div class="row">
    <div class="col-md-12">
        {% if project.src_url|length == 0 %}
            <p>No remote source associated to this project</p>
        {% else %}
            <a href="{{ project.src_url }}">{{ hostname }}</a>
        {% endif %}
    </div>
</div>

{% if notebooks|length > 0 %}
    <div class="row" id="notebooks">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Notebooks</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {% for pth, name in notebooks %}
                            <li>{{ pth }}: {{ name }}</li>
                        {% endfor %}
                    </ul>
                </div>
             </div>
        </div>
    </div>
{% endif %}

{% if executables|length > 0 %}
    <div class="row" id="executables">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Executables</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {% for name, descr in executables %}
                            {% if playground %}
                            <li><a class="btn btn-primary" href="{{ request.route_url('user_view_home', uid=user.id, _query={'executable': name}) }}">{{ name }}</a>: {{ descr }}</li>
                            {% else %}
                            <li>{{ name }}: {{ descr }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
             </div>
        </div>
    </div>
{% endif %}

{% endblock %}
