{% extends "layout.jinja2" %}

{% block team_body %}
<form action="{{ request.route_url('team_edit_%s' % tab, tid=team.id) }}" method='POST'
      enctype="multipart/form-data">

<div id="header" class="row">
    <div class="partner-table">
        <div class="col-md-3 partner avatar">
            <a href="{{ request.route_url('team_view_home', tid=team.id) }}">
                <img class="img-rounded center-block" src="{{ request.static_url('seeweb:data/avatar/team/%s.png' % team.id) }}" />
            </a>
        </div>
        <div class="col-md-9 partner description">
            <div class="h1">{{ team.id }}</div>
            <div class="spacer"></div>
            <ul class="nav nav-tabs">
                {% for tab_title, tab_id in tabs %}
                    <li role="presentation" {% if tab_id == tab %}class="active"{% endif %}><a href="{{ request.route_url('team_edit_%s' % tab_id, tid=team.id) }}">{{ tab_title }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>


<div id="content" class="row">
    <div class="col-md-3">
        <button class="btn btn-primary" type="submit" name="update">Update</button>
        <button class="btn" type="submit" name="default">Default</button>
        <button class="btn pull-right" type="submit" name="back">Back</button>
    </div>

    <div class="col-md-9">
        {% block team_edit_body %}
        {% endblock %}
    </div>
</div>

</form>
{% endblock %}
