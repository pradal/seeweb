{% extends "layout.html" %}

{% block body %}
<div class="container">
    <form class="form-signin" action="{{ request.route_url('user_login') }}" method='POST'>
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="username" class="sr-only">Username</label>
        <input type="text" id="username" class="form-control" placeholder="login" name="username" required autofocus>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" class="form-control" placeholder="Password" name="password" required>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" name="ok">Sign in</button>
    </form>
    <div class="row">
        No account yet?
        <a href="{{ request.route_url('user_register') }}">Register</a>
    </div>

</div>
{% endblock %}

