<!DOCTYPE html>
<html lang="{{ request.locale_name }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="SEE web application">
    <meta name="author" content="revesansparole">
    <link rel="shortcut icon"
          href="{{ request.static_url('seeweb:static/seeweb-16x16.png') }}">

    <title>Science Everyone Everywhere</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ request.static_url('seeweb:static/css/bootstrap.min.css') }}"
          rel="stylesheet">

    <!-- Custom styles for this project -->
    <link href="{{ request.static_url('seeweb:static/css/theme.css') }}"
          rel="stylesheet">
    {% block css %}
    {% endblock %}

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    {% block javascripts %}
    {% endblock %}
</head>

<body>
<div class="container body">

    <!-- banner -->
    <div class="row banner">
      <div class="col-md-2">
        <a href="{{ request.route_url('home') }}">
            <img class="logo img-responsive" src="{{ request.static_url('seeweb:static/seeweb.png') }}" alt="SEE web framework" />
        </a>
      </div>
      <div class="col-md-10 content">
          <h1>
            <span class="font-semi-bold">See</span>
            <span class="smaller">Science Everyone Everywhere</span>
          </h1>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li><a href="{{ request.route_url('project_list') }}">Projects</a></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Users <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="{{ request.route_url('user_list') }}">Individual</a></li>
                    <li><a href="{{ request.route_url('team_list') }}">Team</a></li>
                  </ul>
                </li>
                {% block navbar_top %}
                {% endblock %}
              </ul>
              <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Search" name="main_search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              </form>
              <ul class="nav navbar-nav navbar-right">
                  {% if request.unauthenticated_userid != None %}
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">admin <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><a href="{{ request.route_url('home') }}">Users</a></li>
                        <li><a href="{{ request.route_url('home') }}">Teams</a></li>
                        <li><a href="{{ request.route_url('home') }}">Projects</a></li>
                        <li><a href="{{ request.route_url('admin_comments') }}">Comments</a></li>
                      </ul>
                    </li>
                  {% endif %}
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">lang <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="#">English</a></li>
                    <li><a href="#">Fran√ßais</a></li>
                  </ul>
                </li>
                {% if request.unauthenticated_userid == None %}
                    <li><a href="{{ request.route_url('user_login') }}">login</a></li>
                {% else %}
                    <li><p class="navbar-text">Signed in as <a href="#" class="navbar-link">{{ request.unauthenticated_userid }}</a></p></li>
                    <li><a href="{{ request.route_url('user_logout') }}">logout</a></li>
                {% endif %}
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
      </div>
    </div>

    <!-- Flash messages -->
    <div class="row flash-msg">
        {% for msg in request.session.pop_flash('warning') %}
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="alert alert-warning" role="alert">{{ msg }}</div>
                </div>
            </div>
        {% endfor %}
        {% for msg in request.session.pop_flash('success') %}
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="alert alert-success" role="alert">{{ msg }}</div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Body -->
    <div class="row main-body">
        <div class="col-md-12">
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <!-- footer -->
    <div class="row footer">
        <div class="col-md-8">
            <p>SEEweb</p>
        </div>
        <div class="copyright col-md-4">
            <p>Copyright &copy; revesansparole</p>
        </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ request.static_url('seeweb:static/js/jquery.min.js') }}">
    </script>
    <script src="{{ request.static_url('seeweb:static/js/bootstrap.min.js') }}">
    </script>
    {% block javascripts_end %}
    {% endblock %}
</div>
</body>
</html>
