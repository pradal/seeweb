    <div class="avatar">
        <a href="#">
            <img class="img-circle" src="{{ request.static_url('seeweb:data/avatar/team/%s_small.png' % team.id) }}" />
        </a>
    </div>
    <div class="name">
        <a href="#">{{ team.id }}</a>
    </div>
</div>
{%- endmacro %}
