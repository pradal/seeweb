{% from 'templates/project/macro.jinja2' import project_condensed with context %}

{% extends "layout_view.jinja2" %}

{% block team_view_body -%}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Public projects of the team</h3>
  </div>
  <div class="panel-body">
    {% if projects|length == 0 %}
        <div class="row">
            <p>This team has no public project.</p>
        </div>
    {% else %}
        <div class="row">
            {% for role, project in projects %}
                {{ project_condensed(project, role) }}
            {% endfor %}
        </div>
    {% endif %}
  </div>
</div>

{%- endblock %}
