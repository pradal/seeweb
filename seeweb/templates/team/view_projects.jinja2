{% from 'templates/project/macro.html' import list_projects with context %}

{% extends "team_view.html" %}

{% block team_view_body %}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Public projects of the team</h3>
  </div>
  <div class="panel-body projects">
    {% if projects|length == 0 %}
        <div class="row">
            {% if allow_edit %}
            None yet. Create one?
            {% else %}
            This team has no public project.
            {% endif %}
        </div>
    {% else %}
        <div class="container-fluid">
            <div class="list-group">
                {{ list_projects(projects) }}
            </div>
        </div>
    {% endif %}
  </div>
</div>

{% endblock %}
