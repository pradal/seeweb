{% extends "project_layout.html" %}

{% block project_body %}

<div class="row">
    <div class="summary col-md-3">
        <img src="{{ request.static_url('seeweb:static/avatar/project/%s.png' % project.id) }}">
    </div>
    <div class="summary col-md-9">
        {% if allow_edit %}
        <a class="btn btn-default pull-right" href="{{ request.route_url('project_edit', pid=project.id) }}">
          <span aria-hidden="true" class="glyphicon glyphicon-pencil"></span>
          Edit project
        </a>
        {% endif %}
        <h1>{{ project.id }}</h1>
        <p>Owner: <a href="{{ request.route_url('user_view_home', uid=project.owner) }}">{{ project.owner }}</a></p>
        <p>Visibility: {% if project.public %}Public{% else %}Private{% endif %}
    </div>
</div>

<div class="row">
    <div class="summary col-md-3">
    </div>
    <div class="col-md-9">
        <a class="btn btn-default" href="{{ request.route_url('project_home', pid=project.id) }}">
          <span aria-hidden="true" class="glyphicon glyphicon-pencil"></span>
          Documentation
        </a>
        <a class="btn btn-default" href="{{ request.route_url('project_home', pid=project.id) }}">
          <span aria-hidden="true" class="glyphicon glyphicon-pencil"></span>
          Homepage
        </a>
        <a class="btn btn-default" href="{{ request.route_url('project_home', pid=project.id) }}">
          <span aria-hidden="true" class="glyphicon glyphicon-pencil"></span>
          Source/Download
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Description</h3>
          </div>
          <div class="panel-body">
            Short description
          </div>
         </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Gallery</h3>
          </div>
          <div class="panel-body">
            Gallery
          </div>
         </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Comments</h3>
          </div>
          <div class="panel-body">
            Discussion threads
          </div>
         </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Extra information</h3>
          </div>
          <div class="panel-body">
            Factual auto information
          </div>
         </div>
    </div>
</div>


{% endblock %}
