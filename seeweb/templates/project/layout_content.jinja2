{% extends "layout.jinja2" %}

{% block project_body -%}
<form action="{{ request.current_route_url() }}" method='POST'>

<div id="header" class="row">
    <div class="partner-table">
        <div class="col-md-1 partner avatar">
            <a href="{{ request.route_url('project_view_content', pid=project.id) }}">
                <img class="img-rounded center-block" src="{{ request.static_url('seeweb:data/avatar/project/%s_small.png' % project.id) }}" />
            </a>
        </div>
        <div class="col-md-9 partner description">
            <div class="owner pull-right">
                <p>Author: <a href="{{ request.route_url('user_view_home', uid=cnt_item.author) }}">{{ cnt_item.author }}</a></p>
            </div>
            <div class="h3">{{ project.id }}</div>
            <div class="h4">{{ cnt_item.category }}: {{ cnt_item.name }}</div>
            <p>uid: {{ cnt_item.id }}</p>
        </div>
    </div>
</div>


<div id="content" class="row">
    <div class="col-md-3">
        {% if allow_edition %}
            <button class="btn btn-primary"  data-toggle="modal" data-target="#add_to_gallery">Add to gallery</button>
        {% endif %}
    </div>

    <div class="col-md-9">
        {% block project_content_body %}
        {% endblock %}
    </div>
</div>

{% if allow_edition %}
    <!-- Modal add to gallery -->
    <div id="add_to_gallery" class="modal fade" role="dialog" data-keyboard="true">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add this item to project's gallery?</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
                <textarea class="form-control" rows="5" name="gallery_item_description" placeholder="some description"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" name="confirm_gallery_addition">Add</a>
            <button type="button" class="btn btn-default" data-dismiss="modal" name="cancel_gallery_addition">Cancel</button>
          </div>
        </div>

      </div>
    </div>
{% endif %}

</form>

{%- endblock %}

