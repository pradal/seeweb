{% extends "admin_layout.html" %}

{% block admin_body %}
    {% if search_pattern == "" %}
    <h1>All Projects</h1>
    {% else %}
    <h1>Projects starting with: '{{ search_pattern[:-1] }}'</h1>
    {% endif %}

    <form class="form-inline" role="search" action="{{ request.route_url('admin_projects') }}">
        <div class="form-group">
          <input type="text" class="form-control" name="query" placeholder="Search for name">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        {% if search_pattern != "" %}
        <button type="all" class="btn btn-default" name="all">Display all</button>
        {% endif %}
    </form>

    {% if projects|length == 0 %}
    <h2>No project found</h2>
    {% else %}
    <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>name</th>
              <th>owner</th>
              <th>visibility</th>
            </tr>
          </thead>
          <tbody>
            {% for project in projects %}
            <tr>
              <td><input type="checkbox"></td>
              <td>{{ project.id }}</td>
              <td>{{ project.owner }}</td>
              <td>{% if project.public %}public{% else %}private{% endif %}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
    </div>
    {% endif %}
{% endblock %}

