
{% extends "layout.jinja2" %}

{% block css -%}
    <link href="{{ request.static_url('seeweb:static/css/home.css') }}" rel="stylesheet">
{%- endblock %}

{% block body -%}

<div class="container frontpage">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="jumbotron">
                <div class="container">
                    <p class="lead">Welcome to <span class="font-normal">SEE community</span>,
                    a door to a better view on the world around :)</p>
                    <p><a class="btn btn-primary btn-lg" href="{{ request.route_url('documentation') }}" role="button">Learn more Â»</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Hall of fame</h3>
              </div>
              <div class="panel-body">
                <div class="row">
                    {% for item in items %}
                        <div class="wrapper">
                            <a href="{% if item.url != "" -%}
                                         {% if item.url.startswith("seeweb:") -%}
                                             {{ request.static_url(item.url) }}
                                         {% else %}
                                             {{ item.url }}
                                         {%- endif %}
                                     {%- endif %}">
                                <img class="img-rounded" src="{{ request.static_url('seeweb:data/gallery/%s/%s_thumb.png' % (item.project, item.id)) }}" />
                                <span class="btn btn-default label">{{ item.project }}</span>
                            </a>
                        </div>
                    {% endfor %}
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

{%- endblock %}
