{
  "$schema": "http://json-schema.org/schema#",
  "title": "Workflow Node",
  "description": "Schema for nodes used in workflows",
  "definitions": {
    "port": {
      "description": "Either input or output port description",
      "type": "object",
      "properties": {
        "name": {
          "description": "Locally unique name among either inputs or outputs of this node",
          "type": "string"
        },
        "interface": {
          "description": "Valid identifier of port interface",
          "type": "string"
        },
        "description": {
          "description": "Short description of data expected on this port",
          "type": "string"
        },
        "default": {
          "description": "Default value associated to this port"
        }
      },
      "required": [
        "name",
        "interface",
        "description"
      ]
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique id for a given object",
      "type": "string",
      "minLength": 32,
      "maxLength": 32
    },
    "name": {
      "description": "A display name",
      "type": "string"
    },
    "author": {
      "description": "Author who wrote this node",
      "type": "string"
    },
    "version": {
      "description": "Current version of this node",
      "type": "integer",
      "minimum": 0
    },
    "description": {
      "description": "Short description of node task",
      "type": "string"
    },
    "function": {
      "description": "URI to function actually performing the task",
      "type": "string"
    },
    "inputs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/port"
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/port"
      }
    }
  },
  "required": [
    "id",
    "name",
    "author",
    "version",
    "description",
    "function",
    "inputs",
    "outputs"
  ]
}
