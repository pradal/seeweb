{% extends "layout.jinja2" %}

{% block project_body %}
<form action="{{ request.route_url('project_edit_%s' % tab, pid=project.id) }}" method='POST'
      enctype="multipart/form-data">

<div class="row view_header">
    <div class="col-md-3 avatar">
        <a href="{{ request.route_url('project_view_home', pid=project.id) }}">
            <img class="img-rounded" src="{{ request.static_url('seeweb:data/avatar/project/%s.png' % project.id) }}" />
        </a>
    </div>
    <div class="col-md-9 description">
        <div class="owner pull-right">
            <p>Owner: <a href="{{ request.route_url('user_view_home', uid=project.owner) }}">{{ project.owner }}</a></p>
           <div class="checkbox">
              <label><input type="checkbox" name="visibility" {% if project.public %}checked{% endif %}>Public</label>
            </div>
        </div>
        <div class="h1">{{ project.id }}</div>
        <div class="spacer"></div>
        {% for name, rating in ratings %}
            <div class="form-inline">
              <div class="form-group">
                <label>{{ name }}:</label>
                <input type="hidden" class="rating-tooltip" data-fractions="2" data-readonly value="{{ rating }}">
              </div>
            </div>
        {% endfor %}

        <ul class="nav nav-tabs">
            {% for tab_title, tab_id in tabs %}
                <li role="presentation" {% if tab_id == tab %}class="active"{% endif %}><a href="{{ request.route_url('project_edit_%s' % tab_id, pid=project.id) }}">{{ tab_title }}</a></li>
            {% endfor %}
        </ul>
    </div>

</div>


<div class="row view_body">
    <div class="col-md-3">
        <button class="btn btn-primary" type="submit" name="update">Update</button>
        <button class="btn" type="submit" name="default">Default</button>
        <button class="btn pull-right" type="submit" name="back">Back</button>
        {% if has_source %}
            <button class="btn btn-warning"  data-toggle="modal" data-target="#confirm_fetch">fetch from sources</button>
        {% endif %}
    </div>

    <div class="col-md-9">
        {% block project_edit_body %}
        {% endblock %}
    </div>
</div>

<!-- Modal -->
<div id="confirm_fetch" class="modal fade" role="dialog" data-keyboard="true">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Fetch info in local sources</h4>
      </div>
      <div class="modal-body">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>What type of info to you want to fetch?</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="checkbox">
                          <label><input type="checkbox" value="fetch_avatar" name="fetch_avatar" {% if avatar %}checked{% endif %} />Avatar</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" value="fetch_readme" name="fetch_readme" {% if readme %}checked{% endif %} />Readme</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" value="fetch_dependencies" name="fetch_dependencies"{% if dependencies %}checked{% endif %} />Dependencies</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" value="fetch_gallery" name="fetch_gallery"{% if gallery %}checked{% endif %} />Gallery</label>
                        </div>
                    </div>
                </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" name="confirm_fetch">Confirm</a>
        <button type="button" class="btn btn-default" data-dismiss="modal" name="cancel_fetch">Cancel</button>
      </div>
    </div>

  </div>
</div>

</form>
{% endblock %}
