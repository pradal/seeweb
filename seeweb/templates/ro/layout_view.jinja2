{% extends "layout.jinja2" %}

{% block ro_body -%}

<div id="header" class="row">
    <div class="partner-table">
        <div class="col-md-3 partner avatar">
            <a href="{{ request.route_url('ro_view_home', uid=ro.id) }}">
                <img class="img-rounded center-block" src="{{ request.static_url('seeweb:data/avatar/ro/%s.png' % ro.id) }}" />
            </a>
        </div>
        <div class="col-md-9 partner description">
            <div class="h1">{{ ro.name }}</div>
            <div class="h2">{{ ro.id }}</div>
            <div class="spacer"></div>
            {% if allow_edit %}
                <a class="btn btn-default pull-right" href="{{ request.route_url('ro_edit_%s' % tab, uid=ro.id) }}">
                  <span aria-hidden="true" class="glyphicon glyphicon-pencil"></span>
                  Edit
                </a>
            {% endif %}
            <ul class="nav nav-tabs">
                {% for tab_title, tab_id in tabs %}
                    <li role="presentation" {% if tab_id == tab %}class="active"{% endif %}><a href="{{ request.route_url('ro_view_%s' % tab_id, uid=ro.id) }}">{{ tab_title }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>


<div id="content" class="row">
    <div class="col-md-9 col-md-offset-3">
        {% block ro_view_body %}
        {% endblock %}
    </div>
</div>

{%- endblock %}
