{
  "$schema": "http://json-schema.org/schema#",
  "title": "Script interface",
  "description": "Schema for the script objects",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique id for a given object",
      "type": "string",
      "maxLength": 32
    },
    "name": {
      "description": "A display name",
      "type": "string"
    },
    "author": {
      "description": "Author who wrote this script",
      "type": "string"
    },
    "version": {
      "description": "Current version of this script",
      "type": "integer",
      "minimum": 0
    },
    "description": {
      "description": "Short description of data expected on this port",
      "type": "string"
    },
    "language": {
      "description": "Programming language used in script",
      "type": "string"
    },
    "source": {
      "description": "Actual code source",
      "type": "string"
    }
  },
  "required": [
    "id",
    "name",
    "author",
    "version",
    "language",
    "source"
  ]
}
