{% extends "team_layout.html" %}

{% block team_body %}
<div class="jumbotron">
    <div class="row">
        <div class="col-md-3">
            <img src="{{ request.static_url('seeweb:avatar/team/%s.png' % team.id) }}">
        </div>
        <div class="col-md-9">
            <h1>{{ team.id }}</h1>
            <h2>Sure you want to delete?</h2>
            <p>This action is definitive</p>
            <form action="{{ request.route_url('team_edit_delete', tid=team.id) }}" method="POST">
                <button class="btn btn-default" type="submit" name="cancel">Cancel</button>
                <button class="btn btn-warning" type="submit" name="delete">Delete</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
