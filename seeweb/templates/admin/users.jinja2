{% extends "admin_layout.html" %}

{% block admin_body %}
    {% if search_pattern == "" %}
    <h1>All Users</h1>
    {% else %}
    <h1>username starting with: '{{ search_pattern[:-1] }}'</h1>
    {% endif %}

    <form class="form-inline" role="search" action="{{ request.route_url('admin_users') }}">
        <div class="form-group">
          <input type="text" class="form-control" name="query" placeholder="Search for name">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        {% if search_pattern != "" %}
        <button type="all" class="btn btn-default" name="all">Display all</button>
        {% endif %}
    </form>

    {% if users|length == 0 %}
    <h2>No user found</h2>
    {% else %}
    <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>username</th>
              <th>name</th>
              <th>email</th>
            </tr>
          </thead>
          <tbody>
            {% for user in users %}
            <tr>
              <td><input type="checkbox"></td>
              <td>{{ user.username }}</td>
              <td>{{ user.name }}</td>
              <td>{{ user.email }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
    </div>
    {% endif %}
{% endblock %}

